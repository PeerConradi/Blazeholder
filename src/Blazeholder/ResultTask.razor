@typeparam TTaskResult

@code {
    [Parameter, EditorRequired]
    public Task<TTaskResult> Task { get; set; } = default!;

    [CascadingParameter]
    private IBlazeholderState? state { get; set; }

    protected override void OnParametersSet()
    {
        if (state is not null)
        {
            state.SetTask(Task);
        }
    }
}
